<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">

    <LinearLayout
        android:id="@+id/splashScreenBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:alpha="0"
        android:background="@drawable/gradient_background_splash_screen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="200dp"
            android:alpha="0"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/logo_small" />

        <TextView
            android:id="@+id/splashScreenText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="240dp"
            android:textColor="@color/black"
            android:alpha="0"
            android:fontFamily="@font/pragmatica_extralight"
            android:text="Created by Subhadeep Mandal | 2021"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>